{
  "name": "express-mongo-bootstrap",
  "version": "1.1.0",
  "description": "Express app / mongodb",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "node ./app/",
    "test": "npm run seeddb && NODE_ENV=test ./node_modules/.bin/mocha app/api/** --recursive",
    "seeddb": "NODE_ENV=test node ./app/seeddb.js",
    "cover": "npm run seeddb && NODE_ENV=test ./node_modules/.bin/istanbul cover ./node_modules/mocha/bin/_mocha -- -R spec app/api/** --recursive",
    "jslinter": "./node_modules/.bin/eslint app/**",
    "apidoc": "./node_modules/apidoc/bin/apidoc -i app/ -o apidoc/",
    "postinstall": "cp git-hooks/pre-commit .git/hooks/ && chmod +x .git/hooks/pre-commit && npm run cover && npm run apidoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techmagic-team/express-mongo-bootstrap.git"
  },
  "keywords": [
    "express",
    "mongodb"
  ],
  "author": {
    "name": "Ihor Fito",
    "email": "ihor.fito@techmagic.co"
  },
  "bugs": {
    "url": "https://github.com/techmagic-team/express-mongo-bootstrap/issues"
  },
  "homepage": "https://github.com/techmagic-team/express-mongo-bootstrap#readme",
  "dependencies": {
    "body-parser": "^1.17.1",
    "express": "^4.15.2",
    "joi": "^10.5.2",
    "jsonwebtoken": "^7.4.0",
    "mongoose": "^4.10.4",
    "morgan": "^1.8.2",
    "node-ses": "^2.0.5",
    "pug": "^2.0.0-rc.1"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "chai": "^4.0.1",
    "chai-http": "^3.0.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-node": "^5.0.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "sinon": "^2.3.2"
  }
}
